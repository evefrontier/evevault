{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@evevault/shared/logger": ["../../packages/shared/src/utils/logger.ts"],
      "@evevault/shared": ["../../packages/shared/src"],
      "@evevault/shared/*": ["../../packages/shared/src/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}
